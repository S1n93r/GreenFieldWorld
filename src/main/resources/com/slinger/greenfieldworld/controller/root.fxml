<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="20.0"
      fx:controller="com.slinger.greenfieldworld.controller.RootController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextArea fx:id="console" editable="false" focusTraversable="false" VBox.vgrow="ALWAYS"/>

    <HBox>
        <TextField fx:id="input" HBox.hgrow="ALWAYS" onKeyPressed="#onKeyPressed"/>
        <Button text="Submit" onAction="#onSubmitButtonPressed" focusTraversable="false"/>
    </HBox>

</VBox>